<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#91D8E1"
    tools:context=".ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgawan"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/kota">
    </RelativeLayout>

    <TextView
        android:id="@+id/pengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/fredom"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gambar_profil_pengaturan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profil_kosong"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pengaturan"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/ganti_profil"
        android:layout_below="@+id/gambar_profil_pengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti Foto"
        android:textSize="14sp"
        android:textColor="#0085FF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/username_pengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/ganti_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dm_sans"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="#000000"
        android:layout_below="@id/username_pengaturan"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/email_pengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dm_sans"
        android:textSize="14sp"
        android:textColor="@color/black"/>



    <RelativeLayout
        android:id="@+id/icon_atas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/email_pengaturan"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:id="@+id/edit_profil"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_button_blue">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_profil"
                    android:layout_width="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="80dp"
                    android:src="@drawable/profil"/>
                <TextView
                    android:layout_below="@id/icon_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_toRightOf="@id/edit_profil"
            android:background="@drawable/bg_button_blue">

            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_setting"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dm_sans"
                android:text="Akun"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tentang_kami"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/setting"
            android:background="@drawable/bg_button_blue">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_tentang_kami"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tentang_kami" />

                <TextView
                    android:id="@+id/tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_tentang_kami"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dm_sans"
                    android:text="Tentang"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tentang"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/dm_sans"
                    android:text="Kami"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_atas"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/dukungan"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_button_blue">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/icon_dukungan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/dukungan"/>
                <TextView
                    android:layout_below="@id/icon_dukungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dukungan"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="25dp"
            android:id="@+id/exit"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/dukungan"
            android:background="@drawable/bg_button_blue">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/icon_exit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/exit"/>
                <TextView
                    android:layout_below="@id/icon_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FF0000"
                    android:fontFamily="@font/dm_sans"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>