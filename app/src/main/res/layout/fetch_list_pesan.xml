<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teks_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nota Pembayaran"
                android:fontFamily="@font/dm_sans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <View
                android:id="@+id/divider_nota"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:layout_below="@id/teks_nota"
                app:layout_constraintVertical_bias="0.0" />

            <RelativeLayout
                android:id="@+id/teks_nota_kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_nota">

                <TextView
                    android:id="@+id/teks_nama_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Nama"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_email_nota"
                    android:layout_below="@id/teks_nama_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Email"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_alamat_nota"
                    android:layout_below="@id/teks_email_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Alamat"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_nomor_nota"
                    android:layout_below="@id/teks_alamat_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:text="Telepon"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_kelas_nota"
                    android:layout_below="@id/teks_nomor_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Kelas Hotel"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_kamar_nota"
                    android:layout_below="@id/teks_kelas_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Nomor Kamar"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_jumlah_hari_nota"
                    android:layout_below="@id/teks_kamar_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Jumlah Hari"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_total_nota"
                    android:layout_below="@id/teks_jumlah_hari_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Total"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/teks_status_nota"
                    android:layout_below="@id/teks_total_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Status"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/teks_nota_kanan"
                android:layout_toRightOf="@+id/teks_nota_kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/divider_nota">

                <TextView
                    android:id="@+id/nama_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Aditya Yuda Pamungkas"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/email_nota"
                    android:layout_below="@id/nama_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="adityapamungkas058@gmail.com"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/alamat_nota"
                    android:layout_below="@id/email_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Sukoharjo"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/nomor_nota"
                    android:layout_below="@id/alamat_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="10dp"
                    android:text="088225013258"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/kelas_nota"
                    android:layout_below="@id/nomor_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Ekonomi"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/kamar_nota"
                    android:layout_below="@id/kelas_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="5"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/jumlah_hari_nota"
                    android:layout_below="@id/kamar_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="1 Hari"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/total_nota"
                    android:layout_below="@id/jumlah_hari_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="2.500.000"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/status_nota"
                    android:layout_below="@id/total_nota"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Sudah di bayar"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/tombol_green"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>