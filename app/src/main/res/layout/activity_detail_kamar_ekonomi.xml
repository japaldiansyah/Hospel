<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKamarEkonomi"
    android:background="#91D8E1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgawan"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/kota">
    </RelativeLayout>

    <ImageView
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:id="@+id/back_detail_kamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_ic"/>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Kamar"
        android:fontFamily="@font/fredom"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/gambar_hotel_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/back_detail_kamar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/gambar_detail_kamar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>




    <RelativeLayout
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_text"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/gambar_hotel_detail">
        <TextView
            android:id="@+id/teks_kelas_detail_kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas Ekonomi"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/divider_detail_kamar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="20dp"
            android:background="#000000"
            android:layout_below="@id/teks_kelas_detail_kamar"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/teks_kelas_detail_kamar"
            android:id="@+id/detail_kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi :"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/teks_deskripsi_detail"
            android:layout_below="@id/detail_kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang di kamar ekonomi - Nikmati kenyamanan dalam ruangan yang dirancang dengan indah."
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/fasilitas_kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks_deskripsi_detail"
            android:text="Fasilitas :"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Wi-fi kencang"
            android:layout_below="@id/fasilitas_kamar"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/button_detail"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Reservasi"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_button_green"
            android:fontFamily="@font/dm_sans"
            android:textSize="20sp"/>

    </RelativeLayout>
</RelativeLayout>