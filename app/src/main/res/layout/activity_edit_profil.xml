<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91D8E1"
    tools:context=".EditProfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgawan"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/kota">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bar_atas"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_edit_profil"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/back_ic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fredom"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginStart="25dp"
        android:id="@+id/nama_edit"
        android:layout_below="@id/bar_atas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Nama"
            android:textSize="14sp"
            android:textColor="#191F23" />
        <TextView
            android:layout_toRightOf="@id/nama"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="*"
            android:textSize="14sp"
            android:textColor="#F51A1A"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/nama_edit"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_rounded_text"
        android:paddingStart="15dp"
        android:textColor="#242A31"
        android:textSize="14sp"
        tools:ignore="SpeakableTextPresentCheck" />
    <RelativeLayout
        android:id="@+id/nomor_edit"
        android:layout_below="@+id/et_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Nomor Ponsel"
            android:textSize="14sp"
            android:textColor="#191F23" />
        <TextView
            android:layout_toRightOf="@id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="*"
            android:textSize="14sp"
            android:textColor="#F51A1A"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_nomor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/nomor_edit"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_rounded_text"
        android:paddingStart="15dp"
        android:textColor="#242A31"
        android:textSize="14sp"
        tools:ignore="SpeakableTextPresentCheck" />
    <RelativeLayout
        android:id="@+id/alamat_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_nomor"
        android:layout_marginStart="25dp">
        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Alamat"
            android:textSize="14sp"
            android:textColor="#191F23" />
        <TextView
            android:layout_toRightOf="@id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="*"
            android:textSize="14sp"
            android:textColor="#F51A1A"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_below="@+id/alamat_edit"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_rounded_text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#242A31"
        android:textSize="14sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_simpan"
        android:layout_below="@+id/et_alamat"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_blue"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="TextContrastCheck" />
</RelativeLayout>